{
  "name": "brain-emulation-calculator",
  "version": "0.1.0",
  "description": "Calculator for estimating brain emulation project costs and timelines",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build:data": "npm run validate && npm run generate:types && npm run generate:docs && npm run bundle",
    "validate": "tsx scripts/validate.ts",
    "generate:types": "tsx scripts/generate-types.ts",
    "generate:docs": "tsx scripts/generate-docs.ts",
    "bundle": "tsx scripts/bundle.ts",
    "dev": "npm run build:data && vite",
    "build": "npm run build:data && tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:parity": "vitest run tests/spreadsheet-parity.test.ts"
  },
  "dependencies": {
    "mathjs": "^12.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.1.0"
  }
}
